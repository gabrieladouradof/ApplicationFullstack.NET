@page "/premium"
@inherits ListProductsPage

<MudContainer Class="mt-16">

    <MudText Typo="Typo.h3" Align="Align.Center" GutterBottom="true">Premium</MudText>

    <MudText Align="Align.Center">
        Tenha acesso ilimitado a DimaBank. Incluindo Transações e Categorias ilimitadas.
    </MudText>
    <MudGrid Class="mt-8 justify-center"></MudGrid>

        @foreach (var product in Products)
        {
            <MudItem xs="12" sm="6" md="4">
                @product.Title
            </MudItem>
        }

</MudContainer>